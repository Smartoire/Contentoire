{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "jsx": "react-native",
    "allowJs": true,
    "esModuleInterop": true,
    "moduleResolution": "bundler",
    "target": "esnext",
    "module": "esnext",
    "skipLibCheck": true,
    "customConditions": [
      "react-native"
    ],
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@firebase/auth": [
        "./node_modules/firebase/node_modules/@firebase/auth/dist/index.rn.d.ts"
      ],
      "@/*": [
        "./*"
      ],
      "types": [
        "expo",
        "react",
        "react-native"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "config/firebase.ts"
  ]
}